# Clean URLs: map /<route> -> index.php?request=<route>
<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /

    # Allow direct access to existing files or directories
    RewriteCond %{REQUEST_FILENAME} -f [OR]
    RewriteCond %{REQUEST_FILENAME} -d
    RewriteRule ^ - [L]

    # Fallback: route any non-file path to index.php?request=<path>
    RewriteRule ^(.*)$ index.php?request=$1 [L,QSA]
</IfModule>
